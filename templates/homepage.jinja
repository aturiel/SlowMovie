<!DOCTYPE html>
<html>
<head>
    <!-- https://materializecss.com -->
    <title>Slow Movie</title>
    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <!-- Material icons -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <!-- Place this tag in your head or just before your close body tag. -->
    <script async defer src="https://buttons.github.io/buttons.js"></script>  
    
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <style>
    .row.sm-movie-header {
        margin-bottom: 0.5em;
    }
    .row.sm-movie {
        padding: 1em 1em 0em 1em;
        margin-bottom: 0;
    }
    .row.sm-movie:first-of-type {
        border-radius: 4px 4px 0 0;
    }
    .row.sm-movie:last-of-type {
        margin-bottom: 2em;
        border-radius: 0 0 4px 4px;
    }
    .row.sm-movie.odd {
        background-color: #eceff1;  /* blue-grey lighten-5 */
    }
    .row.sm-movie.even {
        background-color: #cfd8dc;  /* blue-grey lighten-4 */
    }
    .sm-movie-title>label>span{
        font-size:2rem !important;
        color: #004d40; /* teal darken-4 */
    }
    .sm-general-settings {
    }
    </style>
</head>

<body>
    <form action="/form" class="col s12" method="post" enctype="application/x-www-form-urlencoded">
        <div class="container">
            <div class="row">
                <div class="col s12">
                    <h2 class="left-align">Very Slow Movie Player</h2>
                </div>
            </div>

            <div class="row sm-general-settings">
                <div class="col s12">
                    <div class="row">
                        <div class="input-field col s4 sm-random">
                            <label>
                                <input type="checkbox" class="filled-in" id="random" name="random" value="random" 
                                    {% if smData.random == true %}
                                        checked="checked" 
                                    {% endif %} 
                                />
                                <span>Random frames</span>
                            </label>
                        </div>

                        <div class="input-field col s4 sm-increment">
                            <input placeholder="Seconds" type="number" class="validate" id="increment" name="increment" value="{{smData.increment}}"/>
                            <label for="increment">Frame increment</label>
                        </div>

                        <div class="input-field col s4 sm-delay">
                            <input placeholder="Seconds" type="number" class="validate" id="delay" name="delay" value="{{smData.delay}}"/>
                            <label for="delay">Delay</label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row sm-movie-header">
                <h3 class="left-align">Movies</h3>
            </div>

            {% for key, value in smData.movies.items() %}
                <div class="row sm-movie {{ loop.cycle('odd', 'even') }}">
                    <div class="col s8">
                        <div class="row sm-movie-title">
                            <label>
                                <input type="radio" id="{{key}}" name="movie" value="{{key}}" 
                                    {% if key == smData.movie %}
                                        checked="checked" 
                                    {% endif %} 
                                />
                                <span>{{key | replace("_", " ") | replace(".mp4", "") }}</span>
                            </label>
                        </div>
                        <div class="row">
                            <div class="col s5 offset-s1 right-align movie-frames-lbl">Total frames</div>
                            <div class="col s6 sm-movie-frames">{{value.totalFrames}}</div>
                        </div>
                        <div class="row">
                            <div class="col s5 offset-s1 right-align movie-duration-lbl ">Duration</div>
                            <div class="col s6 sm-movie-duration">{{value.totalTime}}</div>
                        </div>
                    </div>

                    <div class="input-field col s4 sm-movie-current-time">
                        <input placeholder="hh:mm:ss.SSS" type="text" class="validate" id="current_{{key}}" name="current_{{key}}" value="{{value.currentTime}}">
                        <label for="current_{{key}}">Current Time</label>
                    </div>
                </div>
            {% endfor %}
            <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                <i class="material-icons right">send</i>
            </button>
        </div>
    </form>
    <br/>
    <footer class="page-footer">
        <div class="footer-copyright">
            <div class="container">
                <div class="row">
                    <div class="col s5 offset-s1 valign-wrapper">
                        Very Slow Movie Player
                    </div>
                    <div class="col s6 right-align">
                        <a class="github-button right" href="https://github.com/aturiel/SlowMovie" data-size="large" aria-label="Star aturiel/SlowMovie on GitHub">Star</a>
                    </div>
                </div>
            </div>
    </footer>
</body>
</html>
